{
  "variables": {
    "ansible_host": "default",
    "ansible_connection": "docker",
    "php_version": "7.1"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:7",
      "commit": "true",
      "author": "Shoma Nishitateno",
      "run_command": [ "-d", "-i", "-t", "--name", "{{user `ansible_host`}}", "{{.Image}}", "/bin/bash" ],
      "changes": [
        "CMD [\"/usr/bin/dumb-init\", \"php-fpm\", \"-F\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "site.yml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}",
        "--extra-vars",
        "php_version={{user `php_version`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "shomatan/php-fpm",
        "tag": "{{user `php_version`}}-centos"
      }
    ]
  ]
}